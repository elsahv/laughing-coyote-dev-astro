---
import ButtonProps from "../shared/ButtonProps.astro";

export interface Props {
  title: string;
  subtitle: string;
  paragraph1: string;
}

const { title, subtitle, paragraph1 } = Astro.props as Props;
---

<div class="bg- flex justify-center py-5 my-5">
  <div id="AboutSection2-container" class="bg- 2xl:w-1/2">
    <div id="" class="grid md:grid-cols-2 py-5">
      <div id="sq1" class="2xl:p-0 p-5 flex items-center">
        <img
          src="https://images.pexels.com/photos/57690/pexels-photo-57690.jpeg"
          alt=""
          class="sq-styles-teal mr-4"
        />
      </div>
      <div id="sq2" class="ml-4 p-3">
        <div id="view-AboutSection2" class="">
          <h2 class="font- text-2xl">{title}</h2>
          <h3 class="text-4xl font-extrabold">{subtitle}</h3>
          <p>{paragraph1}</p>

          <p>-Glen</p>
          <ButtonProps
            btn1="see different styles"
            btn1Link="/#see-different-styles"
          />
        </div>
      </div>
    </div>
  </div>
</div>

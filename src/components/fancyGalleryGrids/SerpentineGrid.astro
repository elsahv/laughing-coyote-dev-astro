---
// import FourImgBanner from "../FourImgBanner.astro";
import CTA from "../shared/CTA.astro";
import FourImgBanner from "../FourImgBanner.astro";
import CssTealTransition from "../sections/CssTealTransition.astro";
---

<div class="">
  <div id="1st-half" class="bg-">
    <div class="0">
      <div class="pt-1 mx-1 bg-">
        <FourImgBanner />
      </div>
      <!--! content-section1 v-->
      <div id="flex" class="bg grid md:grid-cols-4 grid-cols-1">
        <div id="coral" class="bg- md:col-span-3 col-span-2">
          <div class="bg flex justify-center 2xl:mt-[150px]">
            <div
              id="content-container"
              class="bg- 2xl:w-3/4 col-span-2 2xl:mr-0 mr-[35px] 2xl:pt-5 xl:px-5 p-5 2xl:mt-[55px] space-y-8"
            >
              <CTA
                title="This is the new about-(ME) page call-to-action."
                paragraph1="expand on about pg"
                link="/about"
                paragraph2="I provide web design services focused on landing pages, and content creation for small business brand! I create focus-friendly, inclusive websites that elevate your brand and support the work that truly excites you."
              />
            </div>
          </div>
        </div>

        <div
          id=""
          class="bg- flex md:flex-col flex-row px-2 lg:space-y-5 lg:gap-0 gap-4"
        >
          <img
            src="https://dl.dropboxusercontent.com/scl/fi/r2memu9vr71tw03oe57kz/IMG_0300.jpg?rlkey=k9upvwvx4vudmyv88f8srhxlu&st=g5s7cqo5&dl=0"
            alt=""
            class="bg-teal sq-styles-teal w-full 2xl:h-[300px] h-[230px]"
          />
          <img
            src="https://dl.dropboxusercontent.com/scl/fi/r2memu9vr71tw03oe57kz/IMG_0300.jpg?rlkey=k9upvwvx4vudmyv88f8srhxlu&st=g5s7cqo5&dl=0"
            alt=""
            class="sq-styles-teal w-full 2xl:h-[300px] h-[230px]"
          />
        </div>
      </div>
      <!-- ! ^^^^^^ ^-->
    </div>
  </div>
  <div id="section4- WHATS INCLUDED" class="">
    <div id="CSS-TEAL-TRANSITION" class="bg-">
      <div class="md:absolute relative">
        <FourImgBanner />
      </div>
      <div id="skewed-transition" class="skewed-wrapper">
        <div class="skewed-bg"></div>
        <div class="content"></div>
      </div>
    </div>

    <!-- !content-section2 v-->
    <div id="2nd-half teal-background" class="bg-teal">
      <!--*--*--*--*--*--*--*--*--*--*--*--*--*--*--*-->
      <div id="teal-background" class="bg- text-parchment">
        <div id="packages-section" class="grid md:grid-cols-3 grid-cols-1">
          <div
            id=""
            class="bg- flex md:flex-col flex-row items- mt-3 ml-1 px-2 lg:space-y-5 lg:gap-0 gap-4"
          >
            <img
              src="https://dl.dropboxusercontent.com/scl/fi/r2memu9vr71tw03oe57kz/IMG_0300.jpg?rlkey=k9upvwvx4vudmyv88f8srhxlu&st=g5s7cqo5&dl=0"
              alt=""
              class="sq-styles 2xl:w-3/4 w-1/2 2xl:h-[320px] h-[200px]"
            />
            <img
              src="https://dl.dropboxusercontent.com/scl/fi/r2memu9vr71tw03oe57kz/IMG_0300.jpg?rlkey=k9upvwvx4vudmyv88f8srhxlu&st=g5s7cqo5&dl=0"
              alt=""
              class="sq-styles 2xl:w-3/4 w-1/2 2xl:h-[320px] h-[200px]"
            />
          </div>
          <div
            id="content-container"
            class="bg- 2xl:w-3/4 col-span-2 2xl:mr-0 mr-[35px] 2xl:pt-5 xl:px-5 p-5 2xl:mt-[55px] space-y-8"
          >
            <CTA
              title="This is the new web-dev pg call-to-action."
              paragraph1="expand on web dev pg"
              link="/web-development"
              paragraph2="web dev-test  I create focus-friendly, inclusive websites that elevate your brand and support the work that truly excites you."
            />
          </div>

          <CssTealTransition />
        </div>
      </div>

      <!--*--*--*--*--*--*--*--*--*--*--*--*--*--*--*-->
    </div>
    <!-- !^^^^^^ ^-->
  </div>
</div>
